<%- contentFor('body') %>
<div class="modal-container">
  <div class="modal">
    <label class="loginlabel" for="email">Email</label>
    <input class="logininput" type="text" id="email" />
    <label class="loginlabel" for="password">Senha</label>
    <input class="logininput" type="password" id="password" />
    <button class="loginbutton">Logar</button>
  </div>
</div>
<script>
  const loginButton = document.querySelector(".loginbutton");
  loginButton.addEventListener("pointerdown", (e) => {
    const loginData = {
      email: document.querySelector("#email").value,
      password: document.querySelector("#password").value,
    };
    fetch("/login", { method: "post" }).then((res) => res.json(loginData));
  });
</script>
