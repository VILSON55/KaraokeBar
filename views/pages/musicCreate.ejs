<%- contentFor('body') %>
<div class="grid-container">
  <form class="form-submit" method="post" action="/music/create">
    <div class="user-inputs">
      <label class="input-label w-80" for="title">Título</label>
      <input
        class="input w-80"
        type="text"
        id="title"
        name="title"
        placeholder="Digite o título da música"
      />
      <label class="input-label w-80" for="artist">Artista</label>
      <input
        class="input w-80"
        type="artist"
        id="artist"
        name="artist"
        placeholder="Digite o artista da música"
      />
      <label class="input-label w-80" for="source">Caminho</label>
      <input
        class="input w-80"
        type="source"
        id="source"
        name="source"
        placeholder="Digite o caminho da música. Ex: music/boateazul.mp3"
      />
    </div>
    <button type="submit" class="submit-btn button d-flex align-self-center">
      Adicionar Música
    </button>
  </form>
</div>
