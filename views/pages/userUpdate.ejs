<%- contentFor('body') %>
<div class="grid-container">
  <form class="form-submit" method="post" action="/user/update/<%= user.id %>">
    <div class="user-inputs">
      <label class="input-label w-80" for="username">Nome</label>
      <input
        class="input w-80"
        type="text"
        id="username"
        name="name"
        value="<%= user.name %>"
      />
      <label class="input-label w-80" for="email">E-mail</label>
      <input
        class="input w-80"
        type="email"
        id="email"
        name="email"
        value="<%= user.email %>"
      />
      <label class="input-label w-80" for="password">Senha</label>
      <input
        class="input w-80"
        type="password"
        id="password"
        name="password"
        placeholder="Sua senha"
      />
    </div>
    <button type="submit" class="submit-btn button d-flex align-self-center">
      Atualizar Usu√°rio
    </button>
  </form>
</div>
